{% extends 'base.html.twig' %}

{% block title %}Release{% endblock %}

{% block body %}
    <h1>Release</h1>

    <div class="row">
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card">
              <div class="ratio ratio-1x1">
                <img class="card-img-top" src="{{ release.thumbnailUrl }}" alt="{{ release.title }}'s Profile Picture">
              </div>
              <div class="card-body">
                <h5 class="card-title">{{ release.title }}</h5>
                <p class="small">Released: {{ release.releasedAt | date('d/m/Y') }}</p>
                {# <p class="small text-muted">ID: {{ release.type }}</p> #}
                <div class="row g-1">
                    <div class="col-auto"><a class="btn btn-primary" href="{{ path('app_release_edit', {'id': release.id}) }}">Edit</a></div>
                    <div class="col-auto"><a class="btn btn-secondary" href="{{ path('app_release_index') }}">Go back</a></div>
                    <div class="col-auto">{{ include('release/_delete_form.html.twig') }}</div>
                </div>
              </div>
            </div>
            <div >
                Duration: {{ release.ReadableDuration }}<br>
                Tracks: {{ release.tracks | length }}
            </div>
        </div>
        <div class="col">
            <h2>Tracks</h2>
            <ul class="list-unstyled track-list my-3">
                {% for track in release.tracks %}
                    <li class="py-1 px-3 rounded">
                        <div class="row">
                            <div class="col">{{ track.title }}</div>
                            <div class="col-auto">{{ track.ReadableDuration }}</div>
                        </div>
                    </li>
                {% else %}
                    <div class="alert alert-info">
                        <p>No tracks found</p>
                    </div>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
