{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <h1>Artist</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artist.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artist.name }}</td>
            </tr>
            <tr>
                <th>ThumbnailUrl</th>
                <td>{{ artist.thumbnailUrl }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_artist_edit', {'id': artist.id}) }}">Edit</a>

    <a class="btn btn-secondary" href="{{ path('app_artist_index') }}">Go back</a>

    {{ include('artist/_delete_form.html.twig') }}

    {% for release in artist.releases %}
        <div>
            <h2>{{ release.title }}</h2>
            <p>{{ release.description }}</p>
            <p>{{ release.releaseDate|date('Y-m-d') }}</p>
            <p>{{ release.thumbnailUrl }}</p>
            <p>{{ release.artist.name }}</p>
            <p>{{ release.genre.name }}</p>
            <p>{{ release.label.name }}</p>
            <p>{{ release.type.name }}</p>
        </div>
    {% else %}
        <div class="alert alert-info">
            <p>No releases found</p>
        </div>
    {% endfor %}
{% endblock %}
